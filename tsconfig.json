{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "mapRoot": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "files": [
      "index.ts",
      "src/ngx-http-annotations.module.ts",
      "src/ngx-http-annotations.module.ts"
    ],
    "rootDir": "./src",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    // don't auto-discover @types/node, it results in a ///<reference in the .d.ts output
    "types": []
  }
}
